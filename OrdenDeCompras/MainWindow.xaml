<Window x:Class="OrdenDeCompras.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdenDeCompras"
        mc:Ignorable="d"
        Title="Menu" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ClienteButton" Content="Registrar Cliente" Grid.Row="1" Grid.Column="1" Click="ClienteButton_Click"/>
        <Button x:Name="ProductoButton" Content="Registrar Producto" Grid.Row="3" Grid.Column="1" Click="ProductoButton_Click"/>
        <Button x:Name="OrdenButton" Content="Registrar Orden" Grid.Row="5" Grid.Column="1" Click="OrdenButton_Click"/>
    </Grid>
</Window>
